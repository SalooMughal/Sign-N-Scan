<!-- />-->

    <ImageView
        android:layout_width="@dimen/_85sdp"
        android:layout_height="@dimen/_85sdp"
        android:src="@drawable/guest_screen_app_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:id="@+id/firstTextview"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_18ssp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="21dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignNScan"
        android:id="@+id/signTextview"
        android:textColor="@color/black"
        android:layout_marginLeft="-40dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/firstTextview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_18ssp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_semibold"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" PDF"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/firstTextview"
        app:layout_constraintLeft_toRightOf="@+id/signTextview"
        android:textSize="@dimen/_18ssp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:orientation="horizontal"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:id="@+id/bt_sign_in"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/guestBtn"
        android:background="@drawable/google_btn_bg"
        android:layout_marginBottom="21dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/google_icon"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_with_google"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/red"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginStart="10dp"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/bt_sign_in"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:orientation="horizontal"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:id="@+id/guestBtn"
        android:layout_marginBottom="62dp"
        android:background="@drawable/guest_btn_bg"
       >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_as_guest"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/guest_bg_btn"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@+id/bt_sign_in"

            />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
