<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    android:background="@drawable/dailog_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_us"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/splash_bg_color"
        android:textSize="@dimen/_13ssp"
        android:layout_marginTop="27dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/title"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selected_start"
            />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:src="@drawable/selected_start"
            />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:src="@drawable/selected_start"
            />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:src="@drawable/selected_start"
            />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:src="@drawable/selected_start"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_was_your_experience_with_n_our_app"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/toolbar_title_color"
        android:textSize="@dimen/_11ssp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:id="@+id/content"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:layout_marginTop="22dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="1"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_38sdp"
                android:layout_weight="0.5"
                android:text="@string/cancel"
                android:textSize="@dimen/_13ssp"
                android:background="@drawable/btn_add_text_cancel_bg"
                android:textColor="@color/toolbar_title_color"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/cancelBtn"
                android:gravity="center"

                />

            <!--            android:layout_marginEnd="5dp"-->
            <!--            android:paddingEnd="43dp"-->
            <!--            android:paddingStart="43dp"-->

            <TextView
                android:id="@+id/rateUsBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/btn_add_text_ok_bg"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/submit"
                android:textColor="#ffffff"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>



