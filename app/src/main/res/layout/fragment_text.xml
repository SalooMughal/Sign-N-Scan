        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingStart="16dp"
           android:paddingEnd="16dp"
           android:paddingTop="16dp"
           android:paddingBottom="75dp">

           <!-- Select PDF Button -->

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_9ssp"
               android:fontFamily="@font/poppins_medium"
               android:textSize="@dimen/_12ssp"
               android:textColor="@color/black"
               android:text="Select File for Sign" />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/_56sdp"
               android:layout_marginTop="@dimen/_9ssp"
               android:background="@drawable/language_unselected_item_bg">

               <TextView
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:text="Filename.PDF"
                   android:textColor="@color/black"
                   android:layout_centerVertical="true"
                   android:layout_marginStart="20dp"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:id="@+id/filePathTextView"
                   android:fontFamily="@font/poppins_regular"
                   android:textSize="@dimen/_12ssp"/>

               <TextView
                   android:layout_width="89dp"
                   android:layout_height="42dp"
                   android:text="@string/select_file"
                   android:textSize="@dimen/_10ssp"
                   android:background="@drawable/btn_select_file_bg"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:fontFamily="@font/poppins_semibold"
                   android:id="@+id/selectPdfButton"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginEnd="20dp"
                   />


           </RelativeLayout>


           <!-- Watermark Type Selection -->


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="9dp"
               android:fontFamily="@font/poppins_medium"
               android:textSize="@dimen/_12ssp"
               android:textColor="@color/black"
               android:text="@string/watermark_text" />


           <!-- Watermark Text Input (visible when Text option is selected) -->

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_9ssp"

               android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">

               <com.google.android.material.textfield.TextInputLayout
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:hintEnabled="true"
                   app:hintAnimationEnabled="true"
                   app:boxStrokeColor="@color/red"
                   app:boxStrokeErrorColor="@android:color/holo_red_dark"
                   app:errorEnabled="true">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/watermarkEditText"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:hint="@string/enter_watermark_text"
                       android:inputType="text"
                       android:background="@drawable/language_unselected_item_bg"
                       android:textColorHint="@color/black"/>
               </com.google.android.material.textfield.TextInputLayout>


           </RelativeLayout>

           <CheckBox
               android:id="@+id/multipleWatermarkCheckBox"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/apply_watermark_to_full_page"
               android:fontFamily="@font/poppins_regular"
               style="@style/MyCheckboxStyle"
               android:checked="true"
               android:textColor="@color/black"
               android:textSize="@dimen/_10ssp" />

           <CheckBox
               android:id="@+id/entireWatermarkCheckBox"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/apply_on_entire_document"
               android:fontFamily="@font/poppins_regular"
               style="@style/MyCheckboxStyle"
               android:checked="true"
               android:layout_marginTop="10dp"
               android:textColor="@color/black"
               android:textSize="@dimen/_10ssp" />


           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppins_medium"
               android:textSize="@dimen/_12ssp"
               android:layout_marginTop="10dp"
               android:textColor="@color/black"
               android:text="@string/select_font" />


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/_56sdp"
               android:layout_marginTop="@dimen/_9ssp"
               android:background="@drawable/language_unselected_item_bg"
               android:orientation="horizontal">

               <FrameLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <Spinner
                       android:id="@+id/fontTypeSpinner"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:background="@android:color/transparent"
                       android:spinnerMode="dropdown" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="right"
                       android:layout_marginEnd="23dp"
                       android:layout_marginTop="23dp"
                       android:src="@drawable/down_errow_icon" />

               </FrameLayout>



           </LinearLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/_73sdp"
               android:layout_marginTop="@dimen/_9ssp"
               android:background="@drawable/language_unselected_item_bg">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_marginStart="21dp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/poppins_regular"
                   android:textSize="@dimen/_10ssp"
                   android:text="@string/font_size" />

               <ImageView
                   android:id="@+id/decreaseFontBtn"
                   android:layout_width="39dp"
                   android:layout_height="39dp"
                   android:padding="10dp"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginEnd="70dp"
                   android:src="@drawable/decrease_icon"

                   />

               <TextView
                   android:id="@+id/txtNumFont"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignLeft="@+id/decreaseFontBtn"
                   android:textColor="@color/action_sub_text_color"
                   android:layout_centerVertical="true"
                   android:layout_marginStart="35dp"
                   android:fontFamily="@font/poppins_regular"
                   android:textSize="@dimen/_10ssp"
                   android:text="20%" />


               <ImageView
                   android:id="@+id/increaseFontBtn"
                   android:layout_width="39dp"
                   android:layout_height="39dp"
                   android:layout_centerVertical="true"
                   android:src="@drawable/increase_icon"
                   android:layout_marginStart="25dp"
                   android:padding="10dp"
                   android:layout_alignLeft="@+id/txtNumFont"
                   />




           </RelativeLayout>




