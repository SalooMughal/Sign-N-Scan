                   android:progress="50"
                   android:progressTint="@color/red"
                   android:layout_marginTop="@dimen/_16ssp"
                   android:thumbTint="@color/red"
                   android:progressBackgroundTint="@color/seekbara_text_color"/>



           </RelativeLayout>



