           <RadioGroup
               android:id="@+id/fontStyleGroup"
               android:layout_width="wrap_content"
               android:visibility="gone"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <RadioButton
                   android:id="@+id/fontRegular"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/regular" />
               <RadioButton
                   android:id="@+id/fontBold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Bold" />
               <RadioButton
                   android:id="@+id/fontItalic"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Italic" />
           </RadioGroup>

           <!-- Position Selection -->


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/_78sdp"
               android:layout_marginTop="@dimen/_9ssp"
               android:background="@drawable/language_unselected_item_bg">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:layout_marginStart="21dp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/poppins_regular"
                   android:textSize="@dimen/_12ssp"
                   android:id="@+id/heading_vertical"
                   android:text="@string/vertical_position" />



               <RadioGroup
                   android:id="@+id/verticalPositionGroup"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/heading_vertical"
                   android:orientation="horizontal">
                   <RadioButton
                       android:id="@+id/positionTop"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:buttonTint="@color/red"
                       android:layout_marginStart="20dp"
                       android:textColor="@color/action_sub_text_color"
                       android:textSize="@dimen/_8ssp"
                       android:text="@string/top" />
