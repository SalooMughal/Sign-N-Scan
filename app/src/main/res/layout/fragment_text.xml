           <!-- Transparency Section -->


           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/_73sdp"
               android:layout_marginTop="@dimen/_9ssp"
               android:background="@drawable/language_unselected_item_bg">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:layout_marginStart="21dp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/poppins_regular"
                   android:textSize="@dimen/_12ssp"
                   android:text="@string/transparency" />

               <TextView
                   android:id="@+id/transparencyValue"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:textColor="@color/action_sub_text_color"
                   android:layout_marginTop="20dp"
                   android:layout_marginEnd="21dp"
                   android:fontFamily="@font/poppins_regular"
                   android:textSize="@dimen/_10ssp"
                   android:text="50%" />

               <SeekBar
                   android:id="@+id/transparencySeekBar"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:max="100"
                   android:layout_below="@+id/transparencyValue"
                   android:progress="50"
                   android:progressTint="@color/red"
                   android:layout_marginTop="@dimen/_16ssp"
                   android:thumbTint="@color/red"
                   android:progressBackgroundTint="@color/seekbara_text_color"/>

           </RelativeLayout>

           <!-- Rotation Section -->

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/_73sdp"
               android:layout_marginTop="@dimen/_9ssp"
               android:background="@drawable/language_unselected_item_bg">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:layout_marginStart="21dp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/poppins_regular"
                   android:textSize="@dimen/_10ssp"
                   android:text="@string/rotation" />

               <TextView
                   android:id="@+id/rotationValue"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:textColor="@color/action_sub_text_color"
                   android:layout_marginTop="20dp"
                   android:layout_marginEnd="21dp"
                   android:fontFamily="@font/poppins_regular"
                   android:textSize="@dimen/_12ssp"
                   android:text="50%" />

               <SeekBar
