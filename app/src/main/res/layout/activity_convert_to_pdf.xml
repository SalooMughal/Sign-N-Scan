<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:background="@drawable/convert_to_pdf_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_btn"
            android:id="@+id/backButton"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_btn"
            android:id="@+id/clearButton"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:paddingBottom="5dp"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/docsign"
            android:paddingStart="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/select_text_un_selected"
            android:textSize="@dimen/_14ssp"
            android:id="@+id/toolbarTitle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal">





        </LinearLayout>



    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.904"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingEnd="18dp"
            android:paddingStart="18dp"
            android:layout_marginTop="28dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/edit_icon_dailog"
                android:id="@+id/editIcon"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/editIcon"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/file_name"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/filter_text_color"
                    android:textSize="@dimen/_12ssp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File Name"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/favrarte_prview_icon"
                    android:id="@+id/fileName"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_10ssp"
                    />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_"
                android:fontFamily="@font/poppins_regular"
                android:id="@+id/editTextView"
                android:textColor="@color/favrarte_prview_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/_10ssp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingEnd="18dp"
            android:paddingStart="18dp"
            android:layout_marginTop="28dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/pageSizeLayout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/page_size"
                android:id="@+id/pageSizeIcon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/pageSizeIcon"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/page_size"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/filter_text_color"
                    android:textSize="@dimen/_12ssp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fit_same_page_size_as_image"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/favrarte_prview_icon"
                    android:id="@+id/pageSizeName"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_10ssp"
                    />


            </LinearLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:paddingEnd="18dp"
            android:paddingStart="18dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/margin_icon"
                android:id="@+id/marginIcon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/marginIcon"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/margin"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/filter_text_color"
                    android:textSize="@dimen/_12ssp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_margin"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/favrarte_prview_icon"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_10ssp"
                    />


            </LinearLayout>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/favrarte_prview_icon"
                android:id="@+id/checkMargin"
                style="@style/MyCheckboxStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_9ssp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingEnd="18dp"
            android:paddingStart="18dp"
            android:layout_marginTop="28dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/compressionLayout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/compression_icon"
                android:id="@+id/compressionIcon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/compressionIcon"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/compression"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/filter_text_color"
                    android:textSize="@dimen/_12ssp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/low_compression"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/favrarte_prview_icon"
                    android:id="@+id/compressionName"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_10ssp"
                    />


            </LinearLayout>



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:paddingEnd="18dp"
            android:paddingStart="18dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/lock_image_pdf_lock_icon"
                android:id="@+id/lockIcon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/lockIcon"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_password"
                    android:fontFamily="@font/poppins_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/filter_text_color"
                    android:textSize="@dimen/_12ssp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disable"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/favrarte_prview_icon"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_10ssp"
                    />


            </LinearLayout>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/favrarte_prview_icon"
                android:id="@+id/checkPssword"
                style="@style/MyCheckboxStyle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_9ssp"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:gravity="center"
                android:id="@+id/convertPdfBtn"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="33dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="28dp"
                android:background="@drawable/btn_add_text_ok_bg"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/convert_images_to_pdf"
                    android:id="@+id/saveBtntv"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white_both_white"
                    android:textSize="@dimen/_13ssp"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:id="@+id/adViewlayout"
                android:gravity="center"
                >


            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>




    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />



</androidx.constraintlayout.widget.ConstraintLayout>