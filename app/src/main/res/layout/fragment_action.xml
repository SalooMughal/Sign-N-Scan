<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ads_free_app_billing.AddFreeActivity">





    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:paddingTop="@dimen/_5ssp"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:paddingStart="@dimen/_9ssp"
            android:paddingEnd="@dimen/_9ssp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/pdfToolsLayout"
            app:layout_constraintHeight_percent="0.04">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="PDF Converter"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_color1"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/pdfToolsLayout"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/starLayout"
            app:layout_constraintHeight_percent="0.23">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="15dp"
                android:id="@+id/scannerLayout"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/convertPdfBtn"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"
                        android:src="@drawable/action_image_to_pdf_icon"
                        />

                    <HorizontalScrollView
                        android:id="@+id/imageToPdfHorizontalScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/convert_to_pdf"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="@dimen/_8ssp"
                            android:id="@+id/imageToPdfTextView"
                            android:layout_marginTop="3.5dp"
                            android:maxLines="2"
                            android:gravity="center_horizontal"
                            android:singleLine="false"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>




                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/scanBtn"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"

                        android:src="@drawable/action_scan_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scan_to_pdf"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="@dimen/_8ssp"
                            android:id="@+id/scanTextView"
                            android:layout_marginTop="3.5dp"
                            android:maxLines="2"
                            android:gravity="center_horizontal"
                            android:singleLine="false"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Sign &amp; Secure Documents"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_9ssp"
                android:includeFontPadding="false"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toTopOf="@+id/oneView"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Pro Features"
                android:textAllCaps="false"

                android:textColor="@color/white"
                android:background="@drawable/pro_feature_bg"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toTopOf="@+id/oneView"
                app:layout_constraintEnd_toEndOf="parent"
                android:includeFontPadding="false"
                android:paddingStart="7dp"
                android:layout_marginEnd="@dimen/_9ssp"
                android:paddingEnd="7dp"
                android:layout_marginBottom="9dp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/oneView"
                android:layout_marginEnd="@dimen/_9ssp"
                android:layout_marginStart="@dimen/_9ssp"
                android:background="@color/bg_color1"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/starLayout"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/weeklyLayout"
            app:layout_constraintHeight_percent="0.23">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.49"
                    android:layout_marginStart="5dp"
                    android:id="@+id/signBtn"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"
                        android:layout_gravity="center"
                        android:src="@drawable/action_sign_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/signHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sign_document"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="@dimen/_8ssp"
                            android:maxLines="2"
                            android:layout_marginTop="3.5dp"
                            android:id="@+id/signTextView"
                            android:gravity="center_horizontal"
                            android:singleLine="false"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>

                    <!--            <TextView-->
                    <!--                android:layout_width="wrap_content"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:text="@string/sign_document"-->
                    <!--                android:fontFamily="@font/poppins_regular"-->
                    <!--                android:textSize="@dimen/_9ssp"-->
                    <!--                android:layout_marginTop="6dp"-->
                    <!--                android:textColor="@color/action_sub_text_color"/>-->

                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.60"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/addWaterMarkBtn"
                    android:layout_marginStart="5dp"

                    >

                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"
                        android:layout_gravity="center"
                        android:src="@drawable/add_water_mark_icon"

                        />


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_watermark_to_pdf"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="@dimen/_8ssp"
                            android:maxLines="2"
                            android:layout_marginTop="2dp"
                            android:gravity="center_horizontal"
                            android:singleLine="false"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>



                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="PDF Tools"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_9ssp"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toTopOf="@+id/oneViewTow"
                android:layout_marginBottom="8dp"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_regular"
                android:text="Pro Features"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/pro_feature_bg"
                android:textSize="@dimen/_10ssp"
                android:layout_marginEnd="@dimen/_9ssp"
                app:layout_constraintBottom_toTopOf="@+id/oneViewTow"
                app:layout_constraintEnd_toEndOf="parent"
                android:includeFontPadding="false"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:layout_marginBottom="9dp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/oneViewTow"
                android:layout_marginEnd="@dimen/_9ssp"
                android:layout_marginStart="@dimen/_9ssp"
                android:background="@color/bg_color1"
                app:layout_constraintBottom_toBottomOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/weeklyLayout"
            android:id="@+id/pdfToolslayout"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.23">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:id="@+id/pdfToolsSplitLayout"
                app:layout_constraintEnd_toEndOf="parent">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/margePdfBtn"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"
                        android:src="@drawable/merge_action_icon"
                        />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/merge_pdf"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="@dimen/_8ssp"
                        android:id="@+id/mergePdfTextView"
                        android:layout_marginTop="3.5dp"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:scrollHorizontally="true"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/action_sub_text_color"/>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/splitPdfBtn"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"
                        android:src="@drawable/split_action_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/splitPdfHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/split_pdf"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="@dimen/_8ssp"
                            android:id="@+id/splitPdfTextView"
                            android:layout_marginTop="3.5dp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>



                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/compressPdfBtn"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent">


                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"
                        android:src="@drawable/compress_action_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/compressPdfHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/compress_pdf"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="@dimen/_8ssp"
                            android:id="@+id/compressPdfTextView"
                            android:layout_marginTop="3.5dp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:paddingStart="5dp"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/lockPdfBtn"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"
                        android:src="@drawable/lock_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/lockPdfHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lock_pdf"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="@dimen/_8ssp"
                            android:id="@+id/lockPdfTextView"
                            android:layout_marginTop="3.5dp"
                            android:singleLine="true"
                            android:paddingStart="3dp"
                            android:ellipsize="none"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>



                    </HorizontalScrollView>



                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppins_semibold"
                android:text="Other Tools"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_marginStart="@dimen/_9ssp"
                android:layout_marginEnd="@dimen/_9ssp"
                app:layout_constraintBottom_toTopOf="@+id/oneViewThree"
                android:layout_marginBottom="8dp"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                />




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/oneViewThree"
                android:layout_marginEnd="@dimen/_9ssp"
                android:layout_marginStart="@dimen/_9ssp"
                android:background="@color/bg_color1"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/pdfToolslayout"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.22">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="15dp"
                android:id="@+id/barCodeLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.49"
                    android:id="@+id/qrCodeScanner"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginStart="5dp"

                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"
                        android:src="@drawable/qr_code_scanner_icon"
                        />



                    <HorizontalScrollView
                        android:id="@+id/qrCodeHorizontalScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scan_qr_code"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="@dimen/_8ssp"
                            android:id="@+id/qrCodeTextView"
                            android:layout_marginTop="3.5dp"
                            android:maxLines="2"
                            android:gravity="center_horizontal"
                            android:singleLine="false"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/qrCodeGenerator"
                    android:layout_marginStart="5dp"

                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"
                        android:src="@drawable/qr_code_generator_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/qrCodeGeneratorHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@string/generate_qr_code_new"-->
<!--                            android:fontFamily="@font/inter_regular"-->
<!--                            android:textSize="@dimen/_9ssp"-->
<!--                            android:id="@+id/qrCodeGeneratorTextView"-->
<!--                            android:layout_marginTop="3.5dp"-->
<!--                            android:maxLines="2"-->
<!--                            android:gravity="center_horizontal"-->
<!--                            android:singleLine="false"-->
<!--                            android:scrollHorizontally="true"-->
<!--                            android:layout_gravity="center_horizontal"-->
<!--                            android:textColor="@color/action_sub_text_color"/>-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generate_qr_code_new"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="@dimen/_8ssp"
                            android:id="@+id/qrCodeGeneratorTextView"
                            android:layout_marginTop="3.5dp"
                            android:maxLines="2"
                            android:layout_marginStart="1dp"
                            android:gravity="center_horizontal"
                            android:singleLine="false"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/barCodeScannerBtn"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    >

                    <ImageView
                        android:layout_width="@dimen/_45ssp"
                        android:layout_height="@dimen/_45ssp"
                        android:src="@drawable/bar_code_scanner_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/barCodeHorizontalScrollView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scan_barcode"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="@dimen/_8ssp"
                            android:id="@+id/barCodeTextView"
                            android:layout_marginTop="3.5dp"
                            android:maxLines="2"
                            android:gravity="center_horizontal"
                            android:singleLine="false"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>



                </LinearLayout>







            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>