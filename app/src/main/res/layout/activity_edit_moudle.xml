     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="16dp"
         android:layout_marginTop="12dp"
         android:paddingStart="18dp"
         android:paddingEnd="18dp"
         android:gravity="center_horizontal"
         android:weightSum="4"
         android:orientation="horizontal">


         <RelativeLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             >


             <LinearLayout
                 android:id="@+id/buttonOriginal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerHorizontal="true"
                 android:orientation="vertical">


                 <com.google.android.material.imageview.ShapeableImageView
                     android:layout_width="match_parent"
                     android:layout_height="76dp"
                     android:id="@+id/orgnalIcon"
                     android:src="@drawable/original_second_selected"
                     app:shapeAppearance="@style/CornerCutFilter" />

             </LinearLayout>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/buttonOriginal"
                 android:gravity="center"
                 android:fontFamily="@font/poppins_regular"
                 android:textColor="@color/filter_text_color"
                 android:layout_centerHorizontal="true"
                 android:textSize="@dimen/_9ssp"
                 android:id="@+id/orignalTextView"
                 android:text="@string/orignal"
                 />


         </RelativeLayout>

         <RelativeLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginStart="8dp">


             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_centerHorizontal="true"

                 android:id="@+id/buttonEnhance">


                 <com.google.android.material.imageview.ShapeableImageView
                     android:layout_width="match_parent"
                     android:layout_height="76dp"
                     android:id="@+id/enhanceIcon"
                     android:src="@drawable/enhance_second_un_selected_icon"
                     app:shapeAppearance="@style/CornerCut"
                     android:layout_gravity="center_horizontal"
                     />

             </LinearLayout>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/enhance"
                 android:gravity="center"
                 android:id="@+id/enhanceTextView"
                 android:layout_centerHorizontal="true"
                 android:fontFamily="@font/poppins_regular"
                 android:textColor="@color/filter_text_color"
                 android:textSize="@dimen/_9ssp"
                 android:layout_below="@+id/buttonEnhance"/>


         </RelativeLayout>

         <RelativeLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginStart="8dp">


             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_centerHorizontal="true"
                 android:id="@+id/buttonDocs">
<!--                 android:background="@drawable/edit_color_unselcted_main_bg"-->


                 <com.google.android.material.imageview.ShapeableImageView
                     android:layout_width="match_parent"
                     android:layout_height="76dp"
                     android:id="@+id/docIcon"
                     android:src="@drawable/docs_second_un_selected_icon"
                     app:shapeAppearance="@style/CornerCut"
                     android:layout_gravity="center_horizontal"
                     />

             </LinearLayout>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/docs"
                 android:id="@+id/docTextView"
                 android:layout_marginStart="8dp"
                 android:layout_centerHorizontal="true"
                 android:gravity="center"
                 android:fontFamily="@font/poppins_regular"
                 android:textColor="@color/filter_text_color"
                 android:textSize="@dimen/_9ssp"
                 android:layout_below="@+id/buttonDocs"/>


         </RelativeLayout>

         <RelativeLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:layout_marginStart="8dp">


             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_centerHorizontal="true"
                 android:id="@+id/buttonImage">


                 <com.google.android.material.imageview.ShapeableImageView
                     android:layout_width="match_parent"
                     android:layout_height="76dp"
                     android:id="@+id/imageIcon"
                     android:src="@drawable/spark_black_un_selected_icon"
                     app:shapeAppearance="@style/CornerCut"
                     android:layout_gravity="center_horizontal"
                     />

             </LinearLayout>

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/image"
                 android:gravity="center"
                 android:id="@+id/imageTextView"
                 android:layout_centerHorizontal="true"
                 android:fontFamily="@font/poppins_regular"
                 android:textColor="@color/filter_text_color"
                 android:textSize="@dimen/_9ssp"
                 android:layout_below="@+id/buttonImage"/>


         </RelativeLayout>




     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginBottom="25dp"
         android:weightSum="1"
         android:gravity="center">

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.2"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/buttonPrevious"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/left_icon"
                 android:layout_gravity="center_horizontal" />


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/left"
                 android:fontFamily="@font/poppins_regular"
                 android:includeFontPadding="false"
                 android:layout_gravity="center_horizontal"
                 android:textColor="@color/edit_module_color_unselected"
                 android:layout_marginTop="12dp"
                 android:textSize="@dimen/_10ssp"
                 />


         </LinearLayout>

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.2"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/buttonNext"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/right_icon"
                 android:layout_gravity="center_horizontal" />


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/right"
                 android:fontFamily="@font/poppins_regular"
                 android:includeFontPadding="false"
                 android:layout_gravity="center_horizontal"
                 android:textColor="@color/edit_module_color_unselected"
                 android:layout_marginTop="12dp"
                 android:textSize="@dimen/_10ssp"
                 />


         </LinearLayout>

         <LinearLayout
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="0.2"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:id="@+id/adjustBtn"
             android:orientation="vertical">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/adjust_icon"
                 android:layout_gravity="center_horizontal" />


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/adjust"
                 android:fontFamily="@font/poppins_regular"
                 android:includeFontPadding="false"
                 android:layout_gravity="center_horizontal"
                 android:textColor="@color/edit_module_color_unselected"
                 android:layout_marginTop="12dp"
                 android:textSize="@dimen/_10ssp"
                 />


         </LinearLayout>


         <TextView
             android:layout_width="0dp"
             android:layout_height="@dimen/_38sdp"
             android:layout_weight="0.4"
             android:text="@string/done"
             android:textSize="@dimen/_13ssp"
             android:background="@drawable/btn_add_text_ok_bg"
             android:textColor="@color/white_both_white"
             android:gravity="center"
             android:fontFamily="@font/poppins_semibold"
             android:id="@+id/doneBtn"
             android:layout_marginStart="5dp"
             android:layout_marginEnd="18dp"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             />




     </LinearLayout>


 </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>






















