<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:id="@+id/toolbar">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_btn"
            android:id="@+id/backButton"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.5"
            android:text="File Name"
            app:layout_constraintStart_toEndOf="@+id/backButton"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_14ssp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/toolbar_title_color"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/fileName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="14dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/edit_file_new_icon"
            android:paddingTop="5dp"
            android:id="@+id/editBtn"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cropBtn"
            android:paddingStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/crop_icon"
            android:paddingTop="5dp"
            android:id="@+id/cropBtn"
            android:layout_marginEnd="20dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/deleteBtn"
            android:paddingStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/main_delete_icon"
            android:id="@+id/deleteBtn"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="#6A7278" />




    </androidx.constraintlayout.widget.ConstraintLayout>




    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="0dp"
     app:layout_constraintHeight_percent="0.90"
     app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="@color/white"
     android:orientation="vertical">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </androidx.viewpager2.widget.ViewPager2>

            <!-- Add ProgressBar below -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="30dp"
                android:background="@drawable/viewpager_number_bg"
                android:layout_marginBottom="25dp"
                android:layout_gravity="bottom|center"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/back_view_pager_icon"
                        android:id="@+id/backViewPagerPage"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/4"
                        android:textColor="@color/white_both_white"
                        android:textSize="@dimen/_11ssp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_regular"
                        android:id="@+id/pageNumber"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/again_view_pager_icon"
                        android:layout_centerVertical="true"
                        android:id="@+id/againViewPagerPage"/>


                </RelativeLayout>


            </LinearLayout>

        </FrameLayout>



