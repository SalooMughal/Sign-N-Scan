        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scanFilesCount"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_files"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_14ssp"
                android:id="@+id/scannerName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Files"
                android:textColor="#828282"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:layout_alignParentRight="true"
                android:id="@+id/allCountFiles"/>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    app:layout_constraintHeight_percent="0.77"-->

    <LinearLayout
        android:id="@+id/emptyLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintHeight_percent="0.97"
        app:layout_constraintTop_toBottomOf="@+id/childLayout"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_data_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/no_files_yet"
            android:textColor="#3D3C3F"
            android:textSize="@dimen/_17ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal"
            android:text="@string/import_images_or_scan_with_your_camera_to_generate_pdfs"
            android:textColor="#3D3C3F"
            android:textSize="@dimen/_11ssp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.74"
        app:layout_constraintTop_toBottomOf="@+id/childLayout"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/emptyLayoutRecyclerviewItem"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_search_data_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_17ssp"
            android:textColor="#3D3C3F"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_any_document_here"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_11ssp"
            android:textColor="#3D3C3F"/>






    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pdfRv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/childLayout"
        tools:listitem="@layout/pdf_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
