<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_btn"
            android:id="@+id/backButton"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/split_by_ranges"
            app:layout_constraintStart_toEndOf="@+id/backButton"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/main_toolbar_title"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbarTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="14dp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:text="@string/split_pdf"
            android:textSize="@dimen/_10ssp"
            android:background="@drawable/total_pages_bg"
            android:textColor="@color/favrarte_prview_icon"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:id="@+id/totalPages"
            android:paddingTop="4dp"
            android:fontFamily="@font/poppins_regular"

            />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pageByRangeAndDeletePageLayout"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fromPageBtn"

        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_16ssp"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from_page_number"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/toolbar_title_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No 0"
                android:textSize="@dimen/_10ssp"
                android:paddingTop="5dp"
                android:id="@+id/fromPageNumber"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/favrarte_prview_icon"
                />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/toPageBtn"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
          >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Page Number"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/toolbar_title_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/_10ssp"
                android:paddingTop="5dp"
                android:id="@+id/toPageNumber"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/favrarte_prview_icon"
                />

        </LinearLayout>

        <!--            <ImageView-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_alignParentEnd="true"-->
        <!--                android:layout_centerInParent="true"-->
        <!--                android:paddingEnd="8dp"-->
        <!--                android:src="@drawable/next_arrow_icon" />-->

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:id="@+id/setVibration"
        android:weightSum="1"
        android:orientation="horizontal"
        >


        <!--            <androidx.appcompat.widget.SwitchCompat-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:checked="false"-->
        <!--                app:layout_constraintEnd_toEndOf="parent"-->
        <!--                app:layout_constraintTop_toTopOf="parent"-->
        <!--                android:id="@+id/isRemoveAdsEnabled"-->
        <!--                app:layout_constraintBottom_toBottomOf="parent"-->
        <!--                android:layout_marginEnd="8dp" />-->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/merge_all_ranges_in_one_pdf_file"
            android:textColor="@color/toolbar_title_color"
            android:textSize="@dimen/_12ssp"

            />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_weight="0.15"
            app:track="@drawable/track_selector_split"
            android:thumb="@drawable/thumb_icon_split"
            app:trackTint="@null"
            app:thumbTint="@null"

            android:id="@+id/extractAllSwitchBtn"
            />

    </LinearLayout>
</LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:id="@+id/equalPageRangesLayout"
            >



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/split_document_into_equal_page_ranges"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/toolbar_title_color"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="@dimen/_10ssp"
                    android:paddingTop="5dp"
                    android:id="@+id/equalPageRangesNumber"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/favrarte_prview_icon"
                    />

            </LinearLayout>

            <!--            <ImageView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_centerInParent="true"-->
            <!--                android:paddingEnd="8dp"-->
            <!--                android:src="@drawable/next_arrow_icon" />-->

        </RelativeLayout>


    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:text="@string/split_pdf"
        android:textSize="@dimen/_13ssp"
        android:background="@drawable/btn_add_text_ok_bg"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:id="@+id/splitBtn"
        android:layout_marginStart="33dp"
        android:paddingTop="2dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

