<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ads_free_app_billing.AddFreeActivity">


    <!-- Toolbar -->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:weightSum="1"

            android:orientation="vertical">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55"
                android:background="@drawable/successfuylly_bg"
                android:orientation="horizontal"
                android:weightSum="0.9">


                <!--            <ImageView-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:src="@drawable/add_remov_icon"-->
                <!--                app:layout_constraintEnd_toEndOf="parent"-->
                <!--                app:layout_constraintStart_toStartOf="parent"-->
                <!--                app:layout_constraintBottom_toBottomOf="parent"-->
                <!--                />-->


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieAnimationView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:lottie_rawRes="@raw/congratulations"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_marginTop="9dp"
                android:layout_weight="0.45"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:weightSum="0.9">




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:id="@+id/starLayout"
                    app:layout_constraintHeight_percent="0.23">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/premume_bg"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/childStarLayou"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/star_icon"
                            android:layout_marginStart="@dimen/_17ssp"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_features_and_updates_included_for_free"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/black"
                            android:layout_gravity="center_vertical"
                            android:paddingTop="5dp"
                            android:layout_marginStart="7dp"/>


                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enjoy Ads Free App Now"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_15ssp"
                    app:layout_constraintTop_toBottomOf="@+id/starLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center_horizontal"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@drawable/go_home_bg_btn"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="28dp"
                    android:text="@string/go_to_home"
                    android:id="@+id/startedBtn"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


    </FrameLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="@dimen/_22ssp"
        android:paddingEnd="@dimen/_22ssp"
        android:id="@+id/pdfToolsLayout"
        android:layout_marginTop="@dimen/_60ssp"
        app:layout_constraintHeight_percent="0.28">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_154sdp"
            android:background="@drawable/pdf_tools_premium_bg"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_12ssp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advance PDF Tools"
                    android:textSize="@dimen/_13sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/started_textview_color"
                    android:layout_marginStart="@dimen/_11ssp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_22sdp"
                    android:text="PREMIUM TOOLS"
                    android:background="@drawable/pr_tag_bg"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="1.51dp"
                    android:paddingBottom="1.51dp"
                    android:paddingStart="4.5dp"
                    android:layout_alignParentRight="true"
                    android:paddingEnd="4.5dp"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_12ssp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7ssp"/>



            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_92sdp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_18ssp"

                android:id="@+id/pdfToolsSplitLayout"
                app:layout_constraintTop_toBottomOf="@+id/pdfToolsTextview"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/splitPdfBtn"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:padding="@dimen/_16ssp"
                        android:background="@drawable/pdf_tools_un_lock_bg"
                        android:src="@drawable/split_action_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/splitPdfHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/split_pdf"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/_9ssp"
                            android:id="@+id/splitPdfTextView"
                            android:layout_marginTop="@dimen/_6ssp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>



                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/margePdfBtn"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:padding="@dimen/_16ssp"
                        android:background="@drawable/pdf_tools_un_lock_bg"
                        android:src="@drawable/merge_action_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/mergePdfHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/merge_pdf"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/_9ssp"
                            android:id="@+id/mergePdfTextView"
                            android:layout_marginTop="@dimen/_6ssp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/compressPdfBtn"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:padding="@dimen/_16ssp"
                        android:background="@drawable/pdf_tools_un_lock_bg"
                        android:src="@drawable/compress_action_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/compressPdfHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/compress_pdf"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/_9ssp"
                            android:id="@+id/compressPdfTextView"
                            android:layout_marginTop="@dimen/_6ssp"
                            android:singleLine="false"
                            android:ellipsize="none"
                            android:gravity="center_horizontal"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:id="@+id/addWaterMarkBtn"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:padding="@dimen/_16ssp"
                        android:background="@drawable/pdf_tools_un_lock_bg"
                        android:src="@drawable/add_water_mark_icon"
                        />


                    <HorizontalScrollView
                        android:id="@+id/waterPdfHorizontalScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/watermark"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/_9ssp"
                            android:id="@+id/waterPdfTextView"
                            android:layout_marginTop="@dimen/_6ssp"
                            android:singleLine="true"
                            android:ellipsize="none"
                            android:scrollHorizontally="true"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/action_sub_text_color"/>

                    </HorizontalScrollView>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>