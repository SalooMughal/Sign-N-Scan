<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/selectPdfButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select PDF File" />

        <Spinner
            android:id="@+id/splitOptionsSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/startPageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Page"
            android:inputType="number" />

        <EditText
            android:id="@+id/endPageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Page"
            android:inputType="number" />

        <EditText
            android:id="@+id/pagesPerSplitEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pages per Split"
            android:inputType="number" />

        <Button
            android:id="@+id/splitPdfBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Split PDF" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>










































