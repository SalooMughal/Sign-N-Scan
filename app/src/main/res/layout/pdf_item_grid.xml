<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_95ssp"
    android:layout_height="@dimen/_156sdp"
    android:layout_marginTop="8dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/pdf_main_item_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:id="@+id/mainthumbnailIv">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:paddingTop="1.5dp"
                android:id="@+id/thumbnailIv"
                app:strokeWidth="1dp"
                app:strokeColor="@color/main_item_strock_color"
                android:src="@drawable/grid_item_place_holder_icon"
                app:shapeAppearance="@style/Grid_CornerCut_item"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/favoriteIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:src="@drawable/favrarte_un_selected_icon" />

        </FrameLayout>



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--ImageView: Show thumbnail of PDF document i.e, first page of PDF documents-->


        <TextView
            android:layout_width="65dp"
            android:layout_height="11dp"
            android:background="@drawable/pdf_item_name_bg"
            android:text="PDF"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/_6sdp"
            android:textColor="@color/white"
            />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
           >

            <TextView
                android:id="@+id/pdf_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/un_select_signature_color"
                android:ellipsize="end"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:textSize="@dimen/_8ssp"
                android:text="PDF Name" />

            <TextView
                android:id="@+id/pagesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_6ssp"
                android:includeFontPadding="false"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/poppins_regular"
                android:layout_below="@id/pdf_name"
                android:textColor="@color/main_item_size_bg"
                android:text="0 Pages" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3.5dp"
                android:layout_below="@id/pagesTv"
                >

                <TextView
                    android:id="@+id/sizeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_size_bg"
                    android:textSize="@dimen/_6ssp"
                    android:textColor="@color/main_item_size_bg"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:includeFontPadding="false"
                    android:text="100 KB" />


                <TextView
                    android:id="@+id/fileTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_size_bg"
                    android:textSize="@dimen/_6ssp"
                    android:textColor="@color/main_item_size_bg"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:includeFontPadding="false"
                    android:layout_marginStart="2.51dp"
                    android:text="Scanned Doc" />


<!--                <TextView-->
<!--                    android:id="@+id/fileTag"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/item_size_bg"-->
<!--                    android:textSize="@dimen/_8ssp"-->
<!--                    android:layout_toStartOf="@+id/favoriteIcon"-->
<!--                    android:paddingStart="4dp"-->
<!--                    android:paddingEnd="4dp"-->
<!--                    android:singleLine="true"-->
<!--                    android:paddingTop="1dp"-->
<!--                    android:paddingBottom="1dp"-->
<!--                    android:layout_marginStart="3dp"-->
<!--                    android:text="Scanned Doc" />-->


            </LinearLayout>






        </RelativeLayout>
<!--        android:button="@drawable/custom_checkbox"-->
<!--        <CheckBox-->
<!--            android:id="@+id/checkBox"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_alignParentRight="true"-->
<!--            android:layout_centerVertical="true"-->
<!--            style="@style/MyCheckboxStyle"-->
<!--            android:visibility="visible"-->
<!--            android:layout_height="wrap_content" />-->


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:button="@drawable/main_grid_view_custom_checkbox"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content" />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/sharemoreLayout"

            android:orientation="vertical">

            <ImageButton
                android:id="@+id/shareBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:visibility="gone"

                android:layout_marginEnd="7dp"
                android:src="@drawable/share_icon" />

            <ImageButton
                android:id="@+id/moreBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:src="@drawable/more_imageview_icon" />




            <TextView
                android:id="@+id/dateTv"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/moreBtn"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:text="dd/MM/yyyy" />


        </LinearLayout>

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:layout_marginStart="95dp"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:background="@color/bg_color1"/>-->

    </RelativeLayout>



</LinearLayout>