<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/_27sdp"
                android:gravity="center"
                android:id="@+id/convertedPdfLayout"
                android:paddingStart="@dimen/_27sdp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_add_text_ok_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/convert_pdf_icon"
                    app:layout_constraintTop_toBottomOf="@+id/layoot"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/image_to_pdf"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white_both_white"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="15dp"/>


            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="@dimen/_100sdp"
            android:gravity="center_horizontal"
          >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/_25sdp"
                android:gravity="center"
                android:id="@+id/signPdfLayout"
                android:paddingStart="@dimen/_25sdp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_add_text_ok_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/signiture_icon"
                    app:layout_constraintTop_toBottomOf="@+id/layoot"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_document"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white_both_white"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginStart="15dp"/>


            </LinearLayout>



        </LinearLayout>





    </LinearLayout>


</LinearLayout>