<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="@drawable/convert_to_pdf_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/convert_to_pdf"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#3D3C3F"
        android:id="@+id/titletv"
        android:layout_marginTop="38dp"
        android:layout_marginStart="@dimen/_22sdp"

        android:textSize="@dimen/_13ssp"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingEnd="@dimen/_22sdp"
        android:paddingStart="@dimen/_22sdp"
        android:layout_marginTop="28dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/editRelativeLayout"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/edit_sign_icon_dailog"
            android:id="@+id/editIcon"/>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_16ssp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/editIcon"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/un_select_signature_color"
                android:textSize="@dimen/_12ssp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/file_name"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/favrarte_prview_icon"
                android:id="@+id/fileName"
                android:ellipsize="end"
                android:paddingTop="3dp"
                android:maxLines="1"
                android:includeFontPadding="false"
                android:textSize="@dimen/_10ssp"
                />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_"
            android:fontFamily="@font/poppins_regular"

            android:textColor="@color/favrarte_prview_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/_10ssp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_marginTop="28dp"
        android:paddingStart="@dimen/_22sdp"
        android:id="@+id/addpassword"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/lock_sign_icon"
            android:id="@+id/lockIcon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_16ssp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/lockIcon"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_password"
                android:fontFamily="@font/poppins_regular"
                android:includeFontPadding="false"
                android:textColor="@color/un_select_signature_color"
                android:textSize="@dimen/_12ssp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disable"
                android:paddingTop="3dp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/favrarte_prview_icon"
                android:includeFontPadding="false"
                android:textSize="@dimen/_10ssp"
                />


        </LinearLayout>


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/favrarte_prview_icon"
            android:id="@+id/checkPssword"
            android:paddingEnd="@dimen/_5sdp"
            android:button="@drawable/custom_checkbox"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="55dp"

        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:id="@+id/convertPdfBtn"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"
            android:background="@drawable/btn_add_sign_text_ok_bg"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/convert_to_pdf"
                android:id="@+id/saveBtntv"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                />


        </LinearLayout>



    </RelativeLayout>








</LinearLayout>