<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:background="@drawable/file_sorting_bottom_sheet_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingStart="18dp">

            <!--ImageView: Show thumbnail of PDF document i.e, first page of PDF documents-->
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="77dp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:id="@+id/mainthumbnailIv">

<!--                android:background="@drawable/pdf_item_image_bg"-->


                <!--            <ImageView-->
                <!--                android:id="@+id/thumbnailIv"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:padding="3dp"-->
                <!--                android:src="@drawable/ic_launcher_background" />-->

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:paddingTop="1.5dp"
                    android:id="@+id/thumbnailIv"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/main_item_strock_color"
                    android:src="@mipmap/ic_launcher"
                    app:shapeAppearance="@style/CornerCut_item"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="65dp"
                android:layout_height="11dp"
                android:background="@drawable/pdf_item_name_bg"
                android:text="PDF"
                android:gravity="center"
                android:textSize="@dimen/_6sdp"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_below="@+id/mainthumbnailIv"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="9dp"
                android:layout_toEndOf="@+id/mainthumbnailIv">

                <TextView
                    android:id="@+id/pdf_name"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/black"
                    android:text="PDF Name" />


                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_item_size_bg"
                    android:textSize="@dimen/_9ssp"
                    android:paddingTop="2dp"
                    android:layout_below="@id/pdf_name"
                    android:fontFamily="@font/poppins_regular"
                    android:text="01/01/2024 09:45pm" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:layout_below="@id/dateTv"
                    >

                    <TextView
                        android:id="@+id/sizeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_size_bg"
                        android:textSize="@dimen/_7ssp"
                        android:textColor="@color/main_item_size_bg"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingStart="9dp"
                        android:paddingEnd="9dp"
                        android:paddingTop="1dp"
                        android:includeFontPadding="false"
                        android:paddingBottom="1dp"
                        android:text="100 KB" />

                    <TextView
                        android:id="@+id/fileTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_size_bg"
                        android:textSize="@dimen/_7ssp"
                        android:textColor="@color/main_item_size_bg"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingStart="9dp"
                        android:paddingEnd="9dp"
                        android:paddingTop="1dp"
                        android:layout_marginStart="3dp"
                        android:includeFontPadding="false"
                        android:layout_toStartOf="@+id/favoriteIcon"
                        android:paddingBottom="1dp"
                        android:text="100 KB" />




                </LinearLayout>




<!--                <TextView-->
<!--                    android:id="@+id/sizeTv"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/dateTv"-->
<!--                    android:layout_marginTop="6dp"-->
<!--                    android:padding="@dimen/_4sdp"-->
<!--                    android:textSize="@dimen/_9ssp"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:background="@drawable/item_size_bg"-->
<!--                    android:layout_marginStart="5dp"-->
<!--                    android:text="100 KB" />-->

<!--                <TextView-->
<!--                    android:id="@+id/fileTag"-->
<!--                    style="@style/TextAppearance.AppCompat.Body1"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/item_size_bg"-->
<!--                    android:textSize="@dimen/_8ssp"-->
<!--                    android:textColor="@color/white_both_white"-->
<!--                    android:paddingStart="4dp"-->
<!--                    android:paddingEnd="4dp"-->
<!--                    android:layout_below="@+id/dateTv"-->
<!--                    android:layout_alignRight="@+id/dateTv"-->
<!--                    android:paddingTop="2dp"-->
<!--                    android:layout_marginTop="6dp"-->
<!--                    android:paddingBottom="2dp"-->
<!--                    android:text="File Tag" />-->


            </RelativeLayout>



            <ImageView
                android:id="@+id/closeDailogBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/dissmiss_dailog_icon" />



        </RelativeLayout>


    </LinearLayout>






 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:paddingStart="18dp"
     android:paddingEnd="18dp"
     android:paddingBottom="39dp"
     android:orientation="vertical">



     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="35dp"
         android:id="@+id/renamePdfBtn"
         android:layout_gravity="center_vertical"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:layout_centerVertical="true"
             android:src="@drawable/rename_3_dots_icon"
             android:id="@+id/createDateIcon"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="18dp"
             android:gravity="center_vertical"
             android:layout_centerVertical="true"
             android:layout_toRightOf="@+id/createDateIcon"
             android:orientation="vertical">


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/rename_pdf"
                 android:fontFamily="@font/poppins_regular"
                 android:includeFontPadding="false"
                 android:textColor="@color/filter_text_color"
                 android:id="@+id/renameTv"
                 android:textSize="@dimen/_12ssp"
                 />





         </LinearLayout>



     </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="30dp"
         android:id="@+id/fileSavedBtn"
         android:layout_gravity="center_vertical"
         android:orientation="horizontal">

         <ImageView
             android:id="@+id/savedIcon"
             android:layout_width="23dp"
             android:layout_height="23dp"
             android:visibility="invisible"
             android:layout_alignParentRight="true"
             android:src="@drawable/download_pdf_file_un_selected_icon" />

         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:layout_centerVertical="true"
             android:src="@drawable/file_save_icon"
             android:id="@+id/Icon"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="18dp"
             android:gravity="center_vertical"
             android:layout_centerVertical="true"

             android:layout_toRightOf="@+id/Icon"
             android:orientation="vertical">


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Save Document to Phone"
                 android:fontFamily="@font/poppins_regular"
                 android:includeFontPadding="false"
                 android:textColor="@color/filter_text_color"
                 android:textSize="@dimen/_12ssp"
                 />





         </LinearLayout>



     </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="45dp"
         android:layout_gravity="center_vertical"
         android:layout_marginTop="10dp"
         android:id="@+id/editPdfBtn"
         android:visibility="gone"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:src="@drawable/edit_file_icon"
             android:id="@+id/fileSizeIcon"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_marginStart="25dp"
             android:gravity="center_vertical"
             android:layout_toRightOf="@+id/fileSizeIcon"
             android:orientation="vertical">


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Edit Pdf"
                 android:fontFamily="@font/poppins_regular"
                 android:includeFontPadding="false"
                 android:textColor="@color/filter_text_color"
                 android:id="@+id/editPdfTv"
                 android:textSize="@dimen/_13ssp"
                 />




         </LinearLayout>



     </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:layout_marginTop="30dp"
         android:id="@+id/setPasswordBtn"
         android:orientation="horizontal">

         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:layout_centerVertical="true"
                 android:src="@drawable/lock_3_dots_icon"
             android:id="@+id/createDateIcon1"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="18dp"
             android:gravity="center_vertical"
             android:layout_centerVertical="true"

             android:layout_toRightOf="@+id/createDateIcon1"
             android:orientation="vertical">


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/set_password"
                 android:fontFamily="@font/poppins_regular"
                 android:includeFontPadding="false"
                 android:id="@+id/setPasswordTv"
                 android:textColor="@color/filter_text_color"
                 android:textSize="@dimen/_12ssp"
                 />




         </LinearLayout>



     </RelativeLayout>



     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="30dp"
         android:id="@+id/addFavoriteBtn"
         android:layout_gravity="center_vertical"
         android:orientation="horizontal">

         <ImageView
             android:id="@+id/favoriteIcon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:visibility="invisible"
             android:src="@drawable/favrarte_un_selected_icon" />

         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:layout_centerVertical="true"
             android:src="@drawable/favorite_add_icon"
             android:id="@+id/editIcon"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="18dp"
             android:gravity="center_vertical"
             android:layout_centerVertical="true"

             android:layout_toRightOf="@+id/editIcon"
             android:orientation="vertical">


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/add_to_favorites"
                 android:fontFamily="@font/poppins_regular"
                 android:includeFontPadding="false"
                 android:textColor="@color/filter_text_color"
                 android:id="@+id/addFavoriteTv"
                 android:textSize="@dimen/_12ssp"
                 />





         </LinearLayout>



     </RelativeLayout>



     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_gravity="center_vertical"
         android:id="@+id/deletePdfBtn"
         android:layout_marginTop="30dp"
         android:orientation="horizontal">



         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:layout_centerVertical="true"
             android:src="@drawable/delete_3_dots_icon"
             android:id="@+id/lockIcon"/>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginStart="18dp"
             android:gravity="center_vertical"
             android:layout_centerVertical="true"

             android:layout_toRightOf="@+id/lockIcon"
             android:orientation="vertical">


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/delete_pdf"
                 android:fontFamily="@font/poppins_regular"
                 android:includeFontPadding="false"
                 android:textColor="@color/filter_text_color"
                 android:textSize="@dimen/_12ssp"
                 />







         </LinearLayout>



     </RelativeLayout>


 </LinearLayout>









</LinearLayout>