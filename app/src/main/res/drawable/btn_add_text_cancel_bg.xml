<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:startColor="@color/splash_bg_color"
                android:centerColor="@color/splash_bg_color"
                android:endColor="@color/splash_bg_color"
                />

            <corners android:radius="80dp"/>


        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
            <corners android:radius="80dp"/>
        </shape>
    </item>

</layer-list>











