<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item
        android:right="2dp"
        android:top="2dp"
        android:left="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="#FFD700" /> <!-- Replace with desired border color -->
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
