<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background for the progress bar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/> <!-- Dark background color -->
            <corners android:radius="25dp"/> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="@color/white"/> <!-- White border -->
        </shape>
    </item>

    <!-- Foreground (Progress) with inset/padding -->
    <item android:id="@android:id/progress">
        <clip>
            <inset
                android:insetLeft="2dp"
                android:insetRight="2dp"
                android:insetTop="2dp"
                android:insetBottom="2dp"> <!-- Add padding inside progress -->
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/> <!-- Progress fill color (white) -->
                    <corners android:radius="25dp"/> <!-- Rounded corners -->
                </shape>
            </inset>
        </clip>
    </item>

</layer-list>
