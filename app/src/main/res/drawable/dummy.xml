<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background pink color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFE6E6" /> <!-- Light pink background -->
        </shape>
    </item>

    <!-- White curved bottom -->
    <item android:gravity="top"
        android:top="60dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- White part at the bottom -->
            <corners android:topLeftRadius="500dp"
                android:topRightRadius="500dp" /> <!-- Rounded corners for the white bottom -->
        </shape>
    </item>

</layer-list>
