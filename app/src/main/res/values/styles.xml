<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
<!--        <item name="android:fontFamily">@font/sf_ns_bold</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApp.Light" parent="Theme.MaterialComponents.Light">
        <!-- Disable dark mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="CornerCut" parent="">

        <item name="cornerSizeTopLeft">20%</item>
        <item name="cornerSizeTopRight">20%</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">20%</item>

    </style>

    <style name="CornerCut_item" parent="">

        <item name="cornerSizeTopLeft">20%</item>
        <item name="cornerSizeTopRight">20%</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">20%</item>

    </style>

    <style name="Grid_CornerCut_item" parent="">

        <item name="cornerSizeTopLeft">6.7%</item>
        <item name="cornerSizeTopRight">6.7%</item>
        <item name="cornerSizeBottomLeft">6.7%</item>
        <item name="cornerSizeBottomRight">6.7%</item>

    </style>

    <style name="CornerCutFilter" parent="">

        <item name="cornerSizeTopLeft">0%</item>
        <item name="cornerSizeTopRight">0%</item>
        <item name="cornerSizeBottomLeft">0%</item>
        <item name="cornerSizeBottomRight">0%</item>

    </style>

    <style name="CornerCutImage" parent="">

        <item name="cornerSizeTopLeft">7%</item>
        <item name="cornerSizeTopRight">7%</item>
        <item name="cornerSizeBottomLeft">7%</item>
        <item name="cornerSizeBottomRight">7%</item>

    </style>

    <!-- res/values/styles.xml -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="FileSortingDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="renameDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
<!--        <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>



    <style name="SpesficeOpenItemDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>

    </style>


    <style name="ConvertPdfDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="switchStyle">

        <item name="colorControlActivated">@color/buttons_switch_color</item>
        <item name="android:colorForeground">#A4A4A4</item>

    </style>

    <style name="MyCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/red</item>
    </style>


    <color name="buttons_switch_color">#2D66FA</color>
</resources>